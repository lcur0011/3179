{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "data": {"url": "methane.csv"},
  "mark": {
    "type": "boxplot",
    "extent": "min-max"
  },
  "encoding": {
    "x": {"field": "type", "type": "nominal", "title": "Emission Type"},
    "color":{
      "legend": null,
      "field": "type",
      "type": "nominal",
      "scale": {"domain": ["Agriculture", "Waste", "Other"],
                  "range": ["#3438CB", "#fbb89e", "#c1cdc1"]}
          },
    "y": {
      "field": "emissions",
      "type": "quantitative",
      "scale": {"zero": false},
      "title": "Emissions (kT)"
    }
  }
}
